<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".DefaultScreenActivity">

    <android.widget.TextClock
        android:id="@+id/digitalClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format12Hour="@null"
        android:format24Hour="k:mm"
        android:text="Time"
        android:textSize="38dp"
        android:textStyle="bold"
        android:timeZone="GMT+3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <View
        android:layout_width="385dp"
        android:layout_height="3dp"
        android:background="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.864" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.004">

        <Button
            android:id="@+id/navButton"
            android:layout_width="191dp"
            android:layout_height="70dp"
            android:background="@android:color/holo_blue_bright"
            android:text="Navigation"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="377dp" />

        <View
            android:layout_width="3dp"
            android:layout_height="300dp"
            android:background="@android:color/holo_blue_dark"
            tools:layout_editor_absoluteX="191dp"
            tools:layout_editor_absoluteY="54dp" />

        <Button
            android:id="@+id/infoButton"
            android:layout_width="191dp"
            android:layout_height="70dp"
            android:background="@android:color/holo_blue_bright"
            android:text="Flight Info"
            tools:layout_editor_absoluteX="197dp"
            tools:layout_editor_absoluteY="377dp" />
        >
    </LinearLayout>

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="93dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.267">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="93dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Gate" />

            <TextView
                android:id="@+id/gate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="X00"
                android:textSize="38dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="93dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/boarding_text"
                android:layout_width="65dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="Boarding" />

            <TextView
                android:id="@+id/boarding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="00:00"
                android:textSize="38dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="93dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="93dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/freetime_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Freetime"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/freetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00min"
                android:textSize="38dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="93dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/timeToSecurity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time to Security"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/timeToSecurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00min"
                android:textSize="38dp"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>